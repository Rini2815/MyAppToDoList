<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema utama aplikasi -->
    <style name="Theme.MyAppToDoList"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- WARNA UTAMA -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/accent_blue</item>

        <!-- STATUS BAR -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- NAVIGATION BAR -->
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- WAJIB agar sistem tidak override warna -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.MyAppToDoList.Toolbar</item>

    </style>

    <!-- Toolbar custom -->
    <style name="Widget.MyAppToDoList.Toolbar"
        parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

</resources>